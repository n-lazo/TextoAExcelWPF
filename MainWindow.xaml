<Window x:Class="TextoAExcelWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conversor de TXT a Excel" Height="350" Width="600"
        Background="#FF1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="20" BorderBrush="Gray" BorderThickness="2" CornerRadius="10"
                AllowDrop="True" Drop="Border_Drop" DragOver="Border_DragOver"
                MouseLeftButtonDown="Border_MouseLeftButtonDown" Background="Transparent">
            <TextBlock x:Name="TextBlockMensaje" Text="Arrastra tu archivo aquí o haz clic para seleccionar"
                       Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Margin="10" />
        </Border>
        <Button Grid.Row="1" Content="Procesar" Margin="20" Height="40" Click="Procesar_Click"
                Background="#FF3C3F41" Foreground="White" BorderBrush="Gray" />
    </Grid>
</Window>